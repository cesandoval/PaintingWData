extends layout

block pageTitle
  div(class='jumbotron')
    div(class='container')
      h1 Sign Up
      p Get a user account! 

  div(class="container")
    div(class="row")
      div(class="col-md-offset-5 col-md-3")
        form(method="post", action="/signup")
          h4 Get an account.
          div(data-role='fieldcontain')
            fieldset(data-role='controlgroup')
              input(type="text", id="username", class="form-control input-sm chat-input", name="username")
              br
          div(id='hiddendiv',data-role='fieldcontain')
            fieldset(data-role='controlgroup')
              input(type="password", id="password", class="form-control input-sm chat-input", name="password")
              br
          div(id='hiddendiv',data-role='fieldcontain')
            fieldset(data-role='controlgroup')
              input(type="password", id="password2", class="form-control input-sm chat-input", name="password2")
              br
          div(data-role='fieldcontain')   
            input(type='submit',value='Sign Up',data-transition='fade', data-theme='c', class="btn btn-primary btn-md")

