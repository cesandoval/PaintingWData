          .navbar-header
            button(class='navbar-toggle collapsed', data-toggle='collapse', data-target='#navbar', aria-expanded="false", aria-controls="navbar")
              span.sronly.
                Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a(class='navbar-brand', href='/#') Painting With Data
          ul(class='nav navbar-nav')
            li
              a(href='/about') About
            li
              a(href='/documentation') Documentation
            li
              a(href='/app') Application
            li
              a(href='/users/signup') Sign Up
          div(id="navbar", class="navbar-collapse collapse")
            //- form(method="post", action="/users/login", class="navbar-form navbar-right")
            form(class="navbar-form navbar-right")
              div(class="form-group")
                input(type="text", placeholder="User Name", class="form-control", name="username")
              div(class="form-group")
                input(type="password", placeholder="Password", class="form-control", name="password")
              button(type="submit", class="btn btn-success").
                Sign in


