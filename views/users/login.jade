extends ../layout

block pageTitle
  div.container.login-container
    div.row
      div.col-md-offset-3.col-md-6
        form(method="post", action="/users/login")
          h2.spacing.prompt Welcome!
          if !(message == '')
            .alert.alert-danger(role='alert') #{message}
          div(data-role='fieldcontain').form-group
            fieldset(data-role='controlgroup')
              label(for="email").
                Username
              input(type="text", id="email", class="form-control form-input-line", name="username", placeholder="newuser@gmail.com")
              br
          div(id='hiddendiv',data-role='fieldcontain')
            fieldset(data-role='controlgroup')
              label(for="password").
                Password
              input(type="password", id="password", class="form-control form-input-line", name="password")
              br
          div.spacing
          .col-md-3
            div(data-role='fieldcontain')   
              input(type='submit',value='Sign In',data-transition='fade', data-theme='c', class="btn btn-outline-primary")
          .col-md-3
          form(method="get", action="/users/reset-password") 
            input(type='submit',value='Forgot Password?', data-theme='c', class="btn btn-outline-primary", onclick="")
        br
        br
        a(href='./facebook_oauth')
          img.img(src='https://scontent.fzty2-1.fna.fbcdn.net/v/t39.2365-6/17639236_1785253958471956_282550797298827264_n.png?oh=ac5773208898c850f150eabb60b571a7&oe=5B00A6EA', width='200', alt='')
        br
        br
        a(href='./google_oauth')
          img.img(src='http://epkkw.com/wp-content/uploads/2017/11/btn_google_signin_normal.png', width='200', alt='')
